{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"layout": {
			"contentSize": "720px",
			"wideSize": "1200px",
			"blockGap": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "monofur, sans-serif",
					"slug": "monofur",
					"name": "Monofur"
				}
			]
		},
		"color": {
			"palette": [
				{
					"color": "#3d7cce",
					"name": "露草色 Tsuyukusa",
					"slug": "tsuyukusa"
				},
				{
					"color": "#21a0db",
					"name": "月草色 - Tsukikusa",
					"slug": "tsukikusa"
				},
				{
					"color": "#3a8fb7",
					"name": "千草色 - Chigusa iro",
					"slug": "chigurairo"
				},
				{
					"color": "#2b6492",
					"name": "縹 - Hanada",
					"slug": "hanada"
				},
				{
					"color": "#dff2fc",
					"name": "白縹 - Shiro Hanada",
					"slug": "shiro-hanada"
				},
				{
					"color": "#274765",
					"name": "深縹 - Koki Hanada",
					"slug": "koki-hanada"
				},
				{
					"color": "#3f729f",
					"name": "中縹 - Naka Hanada",
					"slug": "naka-hanada"
				},
				{
					"color": "#618bad",
					"name": "次縹 - Tsugi Hanada",
					"slug": "tsugino-hanada"
				},
				{
					"color": "#873d34",
					"name": "弁柄色 - Bengara iro",
					"slug": "bengara"
				}
			]
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Site Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Site Footer",
			"area": "footer"
		}
	],
	"styles": {
		"elements": {
			"link": {
				"typography": {
					"textDecoration": "none"
				},
				"color": {
					"text": "var(--wp--preset--color--tsuyukusa)"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline dotted 0.075em"
					},
					"color": {
						"text": "var(--wp--preset--color--hanada)"
					}
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--bengara)"
					}
				}
			}
		}
	}
}
